---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Toc from "../components/Toc.astro";
import Tags from "../components/Tags.astro";
import "../styles/blog.css";
const { blog, headings } = Astro.props;
---

<BaseLayout>
  <Header pageTitle={blog.data.title} />
  <main class="main">
    <div class="contents">
      <p class="date">投稿日: {blog.data.date.toISOString().slice(0, 10)}</p>
      {blog.data.update && <p class="date">更新日: {blog.data.update.toISOString().slice(0, 10)}</p>}
      <Tags tags={blog.data.tags} />
      <slot />
    </div>
    <div class="sidebar">
      <Toc headings={headings} />
    </div>
  </main>
  <Footer />

  <style>
    .contents {
      flex: 0 0 75%;
    }

    .sidebar {
      flex: 0 1 25%;
      justify-items: center;
    }
  </style>

  <script>
    import "../script/blog.js";
  </script>
</BaseLayout>
