---
const currentPath = Astro.url.pathname;
const firstPath = currentPath.split("/")[1];

const { href, path, text } = Astro.props;
---

<li class="nav"><a class={`nav-link ${firstPath === path ? "active" : ""}`} href={href}>{text}</a></li>

<style>
  .nav {
    text-align: center;
  }

  .nav-link {
    padding: 16px 8px;
    color: rgb(0 0 0 / 87%);
    font-size: 14px;
    text-decoration: none;
  }

  .nav-link.active {
    position: relative;
  }

  .nav-link.active::before {
    content: "";
    position: absolute;
    right: 0px;
    bottom: 0;
    left: 0px;
    height: 4px;
    border-radius: 4px 4px 0px 0px;
    background-color: #000;
  }
</style>
