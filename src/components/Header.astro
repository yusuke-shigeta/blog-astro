---
import Navs from "./Navs.astro";

const { pageTitle } = Astro.props;
---

<header class="header">
  <div class="header-inner">
    <div class="l-header-title">
      <a class="header-title" href="/">{pageTitle}</a>
    </div>
    <div class="l-navs">
      <Navs />
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    z-index: 999;
    top: 0;
    right: 0;
    left: 0;
    background: #fff;
    box-shadow:
      0px 1px 1px 0px rgba(30, 33, 33, 0.25),
      0px 0px 0px 1px rgba(0, 0, 0, 8%);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0 20px;
    width: 100%;
    height: 46px;
    max-width: 1200px;
    padding: 0 14px;
    margin: 0 auto;
  }

  .l-header-title {
    flex: 0 0 75%;
  }

  .header-title {
    display: inline-block;
    border-radius: 4px;
    padding: 3px 16px;
    text-decoration: none;
    background: #000;
    color: #fff;
    font-weight: bold;
    font-size: 18px;
  }

  .l-navs {
    flex: 0 1 25%;
  }
</style>
