---
import Nav from "./item/Nav.astro";

const { pageTitle } = Astro.props;
---

<header class="header">
  <div class="header-inner">
    <div class="l-header-title">
      <a class="header-title" href="/">{pageTitle}</a>
    </div>
    <nav>
      <ul class="navs">
        <Nav href="/" path="" text="Top" />
        <Nav href="/about/" path="about" text="About" />
        <Nav href="/blog/" path="blog" text="Blog" />
      </ul>
    </nav>
  </div>

  <style>
    .header {
      background: #fff;
      box-shadow:
        0px 1px 1px 0px rgba(30, 33, 33, 0.25),
        0px 0px 0px 1px rgba(0, 0, 0, 8%);
    }

    .header-inner {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      max-width: 1200px;
      padding: 0 14px;
      margin: 0 auto;
      gap: 0 20px;
      height: 46px;
    }

    .l-header-title {
      flex: 0 0 75%;
    }

    .header-title {
      display: inline-block;
      border-radius: 4px;
      text-decoration: none;
      background: #000;
      color: #fff;
      font-weight: bold;
      padding: 3px 16px;
      font-size: 18px;
    }

    nav {
      flex: 0 1 25%;
    }

    .navs {
      display: flex;
      justify-content: center;
      padding: 0;
      list-style-type: none;
      gap: 12px;
      font-size: 14px;
    }

    @media screen and (min-width: 960px) {
      .header {
        position: fixed;
        z-index: 999;
        top: 0;
        right: 0;
        left: 0;
      }

      .header-inner {
        gap: 0 20px;
        height: 46px;
      }

      .l-header-title {
        flex: 0 0 75%;
      }

      .header-title {
        padding: 3px 16px;
        font-size: 18px;
      }

      nav {
        flex: 0 1 25%;
      }

      .navs {
        gap: 12px;
        font-size: 14px;
      }
    }
  </style>
</header>
